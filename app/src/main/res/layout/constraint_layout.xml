        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a-view-from-atop-the"
        tools:layout_editor_absoluteX="51dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
